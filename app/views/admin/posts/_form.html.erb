<%= simple_form_for(@admin_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-inputs">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
